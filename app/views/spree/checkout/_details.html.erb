<div class="columns omega six" data-hook="details_fieldset_wrapper">
  <fieldset id="shipping" data-hook>
    <%= form.fields_for :details do |f| %>
      <legend><%= t(:additional_information) %></legend>
      <div class="inner" data-hook="details_inner">
        <p class="field" id="gender">
          <%= f.label :gender, t(:gender) %><br />
          <%= f.text_field :gender %>
        </p>
        <p class="field" id="profession">
          <%= f.label :profession, t(:profession) %><span class="req">*</span><br />
          <%= f.text_field :profession, :class => 'required' %>
        </p>
        <p class="field" id="other_profession">
          <%= f.label :other_profession, t(:if_other_please_specify) %><br />
          <%= f.text_field :other_profession %>
        </p>
        <p class="field" id="graduation">
          <%= f.label :graduation, t(:year_of_graduation) %><br />
          <%= f.text_field :graduation %>
        </p>
        <p class="field" id="province">
          <%= f.label :graduation, t(:year_of_graduation) %><br />
          <%= f.text_field :graduation %>
        </p>
        <p class="field" id="member_number">
          <%= f.label :member_number, t(:OPA_member_number) %><br />
          <%= f.text_field :member_number %>
        </p>
      </div>
    <% end %>
  </fieldset>
</div>
